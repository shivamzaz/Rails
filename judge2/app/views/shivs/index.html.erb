<p id="notice"><%= notice %></p>

<h1>Listing Shivs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shivs.each do |shiv| %>
      <tr>
        <td><%= shiv.name %></td>
        <td><%= shiv.password %></td>
        <td><%= link_to 'Show', shiv %></td>
        <td><%= link_to 'Edit', edit_shiv_path(shiv) %></td>
        <td><%= link_to 'Destroy', shiv, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

