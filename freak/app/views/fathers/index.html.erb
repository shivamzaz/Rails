<p id="notice"><%= notice %></p>

<h1>Listing Fathers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fathers.each do |father| %>
      <tr>
        
        <td id=<%= father.name %> ><%= father.name %></td>
        <td style="background-color:#<%= father.name %>"><%= father.content %></td>
        <td><%= link_to 'Show', father %></td>
        <td><%= link_to 'Edit', edit_father_path(father) %></td>
        <td><%= link_to 'Destroy', father, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
      <% if !father_signed_in? %>
  <div><%= link_to "Sign in", new_father_session_path, :method => :get %></div>
<% end %>
    <% if father_signed_in? %>
  <div><%= link_to "Sign out", destroy_father_session_path, :method => :delete %></div>
<% end %>
  </tbody>
</table>

<br>

